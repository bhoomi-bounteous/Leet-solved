class Solution {
    public List<String> fullJustify(String[] words, int maxWidth) {
        int i=0;
        int j=0;
        List<String> ans= new ArrayList<>();
        while(i<words.length){
            int char_count=words[i].length();
             j=i+1;
            int slot=0;
            int eslot=0;
            while(j<words.length && (char_count+words[j].length()+1+slot)<=maxWidth){
                char_count+=words[j].length();
                slot++;
                j++;
            }
            StringBuilder line= new StringBuilder();
            int totalSpace=maxWidth-char_count;
             if(j==words.length || slot==0){
                for(int k=i;k<j;k++){
                    line.append(words[k]);
                      if(k<j-1) line.append(" ");
                }
              
                while(line.length()<maxWidth) line.append(" ");
             }
           else{
                int spacePerGap = totalSpace / slot;
                int extraSpaces = totalSpace % slot;
                for(int k=i;k<j;k++){
                    line.append(words[k]);
                    if(k<j-1){
                        for(int l=1;l<=spacePerGap;l++) line.append(" ");
                    }
                    if (extraSpaces > 0) {
                            line.append(" ");
                            extraSpaces--;
                        }
                }
           }
           ans.add(line.toString());
             i=j;

        }
        return ans;
    }
}
