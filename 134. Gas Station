class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
       int n=gas.length;
       int totalcost=0;
       int totalgas=0;
       int start=0;
       int diff=0;
        for(int i=0;i<n;i++){
            totalcost+=cost[i];
            totalgas+=gas[i];
        }
        
        if(totalcost>totalgas) return -1;
        int curr=0;
         for(int i=0;i<n;i++){
            curr+=gas[i];
            curr-=cost[i];
            if(curr<0){
                start=i+1;
                curr=0;
            }
         }
         return start;
    }
    }
