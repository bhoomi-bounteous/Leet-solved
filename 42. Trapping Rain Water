class Solution {
    public int trap(int[] height) {
        int left=0;
        int right=0;
        int total=0;
        int i=0;
        int j=height.length-1;
        while(i<=j){
           if(height[i]<=height[j]){
               if(height[i]<left){
                 total+=(left-height[i]);
               }else{
                 left=height[i];
               }
               i++;
           }else{
              if(height[j]<right){
                total+=(right-height[j]);
              }else{
                right=height[j];
              }
              j--;
           }
        }
        return total;
    }
}
