class Solution {
    public int hIndex(int[] citations) {
        int n=citations.length;
        Arrays.sort(citations);
        int start=0;
        int end=n-1;
        int ans=0;
        while(start<=end){
            int mid=(start+end)/2;
            if(n-mid<=citations[mid]){ ans=Math.max(n-mid,ans);
          end=mid-1;}else{
               
                 start=mid+1;
            }
            
        }
        return ans;
    }
}
