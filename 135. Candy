class Solution {
    public int candy(int[] ratings) {
        int i=1;
        int down=1;
        int peak=1;
        int sum=1;
        int n=ratings.length;
        while(i<ratings.length){
            if(ratings[i]==ratings[i-1]){
                sum+=1;
                i++;
                continue;
            }
            peak=1;
            while(i<n && ratings[i]>ratings[i-1]){
                peak++;
                sum+=peak;
                i++;
            }
            down=1;
            while(i<n && ratings[i]<ratings[i-1]){
                sum+=down;
                down++;
                i++;
            }
            if(down>peak) sum+=(down-peak);
        }
        return sum;
    }
}
